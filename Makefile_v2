stats:
	@echo "ğŸ“Š EstadÃ­sticas del proyecto AxiomaCore-328:"
	@echo "LÃ­neas de cÃ³digo Verilog v2:"
	@wc -l $(SOURCES_V2) | tail -1
	@echo "LÃ­neas de testbench:"
	@wc -l $(TESTBENCH_V2)
	@echo "Archivos del proyecto:"
	@find . -name "*.v" | wc -l
	@echo "MÃ³dulos implementados:"
	@grep -r "^module " . --include="*.v" | wc -l
	@echo "Compatibilidad AVR estimada: ~30%"

# ============= LIMPIEZA =============
clean:
	@echo "ğŸ§¹ Limpiando archivos generados..."
	rm -f axioma_cpu_v1_sim axioma_cpu_v2_sim
