	rm -f *.vcd
	rm -f *.out
	rm -rf $(SYN_DIR)/*.v $(SYN_DIR)/*.ys $(SYN_DIR)/*.txt
	@echo "âœ… Limpieza completada"

# ============= VERIFICACIÃ“N HERRAMIENTAS =============
